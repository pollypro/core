{
  "name": "core",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:pollypro/core.git",
  "license": "MIT",
  "author": "Ivan Stetsenko <i.stetsenko1@gmail.com>",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all clean tsc",
    "clean": "rimraf dist/*",
    "prettier:fix": "prettier --write src/**/*",
    "seed": "ts-node --transpile-only scripts/seed/seed.ts",
    "start": "ts-node-dev --transpile-only src/app.ts",
    "tsc": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 100,
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "dependencies": {
    "bcrypt": "5.0.0",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "dotenv-safe": "8.2.0",
    "express": "4.17.1",
    "express-http-context": "1.2.4",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.20",
    "mongodb": "3.6.0",
    "morgan": "1.10.0",
    "yup": "0.29.3"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/body-parser": "1.19.0",
    "@types/cors": "2.8.7",
    "@types/dotenv-safe": "8.1.1",
    "@types/express": "4.17.7",
    "@types/jsonwebtoken": "8.5.0",
    "@types/lodash": "4.14.161",
    "@types/mongodb": "3.5.26",
    "@types/morgan": "1.9.1",
    "@types/node": "14.6.0",
    "@types/yup": "0.29.6",
    "husky": "4.2.5",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.1",
    "pretty-quick": "3.0.0",
    "rimraf": "3.0.2",
    "ts-node": "9.0.0",
    "ts-node-dev": "1.0.0-pre.60",
    "typescript": "3.9.7"
  },
  "engines": {
    "node": "14.8.0",
    "yarn": "1.22.4"
  }
}
